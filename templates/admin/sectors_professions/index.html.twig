{% extends 'base.html.twig' %}

{% block title %}ActivitySector index{% endblock %}

{% block body %}
    <h1>ActivitySector index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>professions</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sector in sectors %}
            <tr>
                <td>{{ sector.id }}</td>
                <td>{{ sector.name }}</td>
                <td> 
                    {% for profession in sector.professions %} 
                    {{ profession.name }} <hr>
                    {% endfor %}
                </td>
                <td>
                    <form method="post" action="{{ path('admin_sector_delete', {'id': sector.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sector.id) }}">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('activity_sector_new') }}">Create new</a>
{% endblock %}
