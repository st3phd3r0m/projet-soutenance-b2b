{% extends 'base.html.twig' %}

{% block title %} Yeah! - Accueil{% endblock %}

{% block body %}
<main class="fond">
{{ form_start(form) }}
 <div class="row m-3 ">
    {# premiere partie #}
    <div class="col-2">
        <div class="bg-dark">
            {{ form_widget(form.imageFile) }}
            {{ form_errors(form.imageFile)}}
        </div>
    </div>

    {# deuxieme partie #}
    <div class="col-5">
        <div class="d-flex"> 
            <div class="m-1">
            {{ form_widget(form.category) }}
            {{ form_errors(form.category)}}
            </div>
           
        </div>

        <div> 
            <h2>Choisir un titre</h2>
            {{ form_widget(form.title) }}
            {{ form_errors(form.title)}}
        </div>

        <div>
        {{ form_widget(form.description) }}
        {{ form_errors(form.description)}}
        </div>

         <div>
        {{ form_widget(form.notes) }}
        {{ form_errors(form.notes)}}
        </div>

         <div class="keyWords"> Mots-cl√©s :  
        {{ form_row(form.key_words) }}
        </div>
    </div>
       
    

    {# troisieme partie #}
    <div class="col-5 float-right">
     <div>
            {{ form_widget(form.activity_sector) }}
            {{ form_errors(form.activity_sector)}}
            </div>
        <div>
            {# {{ form_widget(form.city) }} #}
            {{ form_row(form.city)}}
            <datalist id="selectPannel" autocomplete="off"></datalist>
            {{ form_row(form.coordinates) }}

        </div>
        <div>
            <div>
             {{ form_row(form.price_min) }}
            {# {{ form_errors(form.price_min)}} #}
            {{ form_row(form.price_max) }}
            {# {{ form_errors(form.price_max)}} #}
            </div>
            <div> 
            <h2 class="btn pinkBackground">Urgence de votre annonce</h2>
            {{ form_widget(form.urgency) }}
            {{ form_errors(form.urgency)}} 
            </div>
           
        </div>
        <div>
            {{ form_row(form.Valider) }}
        </div>
    </div>

 </div>
 
{{ form_end(form) }}
</main>
{% endblock %}