{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

 <div class="w-100 mx-auto fond">
    <div class="w-50 mx-auto formulaire">
        {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1 class="titre mb-4 pt-4 text-center">Rénitialisation du mot de passe</h1>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                    Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </small>
                </div>

                <button class="btn pinkBackground mb-4 mt-4">Envoyer un e-mail de rénitialisation du mot de passe</button>
            {{ form_end(requestForm) }}
    </div
 </div>
   
{% endblock %}